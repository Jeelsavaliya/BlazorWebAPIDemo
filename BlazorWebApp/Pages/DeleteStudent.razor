@using BlazorClass;
<h3>DeleteStudent</h3>

<div class="modal fade show" style="display: block;" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Student Detail</h5>
                <button type="button" class="close" @onclick="Back" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>ID:</strong> @student.Id</p>
                <p><strong>FirstName:</strong> @student.FirstName</p>
                <p><strong>LastName:</strong> @student.LastName</p>
                <p><strong>Standard:</strong> @student.MobileNumber</p>
                <p><strong>Address:</strong> @student.Semester</p>
                <p>Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Back">Close</button>
                <button type="button" class="btn btn-primary" @onclick="Delete">Delete</button>
            </div>
        </div>
    </div>
</div>
