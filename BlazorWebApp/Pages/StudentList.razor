@page "/student-list"
<h3>StudentList</h3>

<button class="btn btn-primary" @onclick="AddStd">Add Student</button>

@if (students == null)
{
    <h1>Loading...</h1>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>MobileNumber</th>
                <th>Semester</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var std in students)
            {
                <tr>
                    <td>@std.Id</td>
                    <td>@std.FirstName</td>
                    <td>@std.LastName</td>
                    <td>@std.MobileNumber</td>
                    <td>@std.Semester</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => UpdateStudent(std.Id)">Update</button>

                        <button class="btn btn-danger" @onclick="() => Delete(std.Id)" data-toggle="modal" data-target="#exampleModal">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

